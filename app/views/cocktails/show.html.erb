<%# cocktail only has name %>

<h2><%= @cocktail.name %></h2>
<% @cocktail.doses.each do |dose| %>
<p> <%= dose.description %> </p>
<p> <%= dose.ingredient.name %> </p>
<% end %>

<%= simple_form_for [@cocktail, @dose] do |f| %>
<%= f.input :description %>
<%= f.association :ingredient %>
<%= f.submit %>


<% end %>